<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip" >

    <ImageView
        android:id="@+id/icon_Des_Termins"
        android:layout_width="70dp"
        android:layout_height="fill_parent"

        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dip"
        android:src="@drawable/shiba" />

    <TextView
        android:id="@+id/txt_Beschreibung_Termin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/icon_Des_Termins"
        android:text="Beschreibung"
        android:textColor="@color/weiß"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txt_Titel_Termin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/txt_Beschreibung_Termin"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/weiß"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/icon_Des_Termins"
        android:gravity="center_vertical"
        android:text="Titel"
        android:textSize="16sp" />

</RelativeLayout>